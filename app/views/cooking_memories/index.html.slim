= javascript_pack_tag 'search_cooking_memory'
= content_for(:title, (t '.title'))
.cooking-memory-wrapper
  .container
    .row.justify-content-md-center
      .col
        .mt-3.title.text-center
          | #{t '.cooking_history'}
    .row.justify-content-md-center
      .col-10
        = search_form_for @q, class: 'mt-3' do |f|
          .form-group
            = f.search_field :fish_name_cont, placeholder: "#{t '.fish_kind'}", class: 'me-3 cooking-memories-search-select-form'
            = f.search_field :cooking_date_gteq, placeholder: "#{t '.cook_date'}", class: 'me-1 cooking-memories-search-select-form'
            span.me-1 ã€œ
            = f.search_field :cooking_date_lteq, placeholder: "#{t '.cook_date'}", class: 'me-3 cooking-memories-search-select-form'
            = f.search_field :fish_name_or_cooking_name_or_memo_cont, placeholder: "#{t '.keyword'}", class: 'me-3 cooking-memories-search-select-form'
            = button_tag type: 'submit', class: 'btn btn-primary cooking-memories-search-button' do
              i.fas.fa-search
    = render @current_user_cooking_memories